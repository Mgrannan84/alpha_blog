
<h1 class="text-center mt-4"><%= @user.username %>'s Profile</h1>

<% if logged_in? && @user == current_user %>
<div class="row justify-content-center">
<div "text-center mt-4">

    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-secondary" %>
    <%= link_to "Delete Profile", user_path(@user), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>

</div>
</div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<div class="container">
<div class="row justify-content-center">
<div class="col-8">
<div class="apple_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>
</div>
</div>
</div>

<%= render 'articles/article' %>

