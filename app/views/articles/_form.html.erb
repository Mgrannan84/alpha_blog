<div class="container">
    
    

    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, class: "shadow p-4 m-4 bg-success rounded", local: true) do |f| %>
                <div class="form-group row mt-2">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Give your article a snazzy headline..." %>
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <%= f.label :Content, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control  shadow rounded", placeholder: "Write your article here..." %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-md mt-2" %>
                </div>
            <% end %>
        </div>
        
    </div>
</div>

<div class="row justify-content-center">
            
    <%= link_to 'Cancel', articles_path, class: "btn btn-outline-dark btn-md mb-4" %>
            
</div>